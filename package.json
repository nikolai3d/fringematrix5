{
  "name": "fringematrix",
  "version": "1.0.0",
  "private": true,
  "description": "Fringe Matrix Gallery - A digital archive for fan-created avatar images",
  "type": "module",
  "main": "server/server.ts",
  "scripts": {
    "build": "npm run generate:build-info && npm run build:client",
    "build:client": "cd client && vite build",
    "generate:build-info": "node scripts/generate-build-info.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx server/server.ts",
    "dev:client": "cd client && vite",
    "start": "tsx server/server.ts",
    "preview": "cd client && vite preview",
    "test": "npm run test:server && npm run test:client",
    "test:server": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config server/jest.config.js",
    "test:server:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config server/jest.config.js --watch",
    "test:server:ci": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config server/jest.config.js --ci --reporters=default --reporters=jest-junit",
    "test:client": "cd client && vitest run",
    "test:client:ci": "cd client && vitest run",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config e2e/playwright.config.ts --headed",
    "test:e2e:conservative": "playwright test --config e2e/playwright.config.test.ts",
    "test:e2e:loading-screens": "bash e2e/test-loading-screens.sh",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "lint": "echo 'No linter configured'",
    "typecheck": "cd client && tsc --noEmit"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@vercel/blob": "^0.23.4",
    "dompurify": "^3.3.1",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@playwright/test": "^1.45.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.4.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
